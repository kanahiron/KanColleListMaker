return

*getText
	oncmd 0
	
	if (lparam = tth){
		MultiByteToWideChar 0, 0, varptr(tweettext), -1, 0, 0
		ttCount = stat -1
		if twiOrderCount :ttCount += 24
		sendmsg ttCounth ,$C , , strf("%3d",140-ttCount)
	}
	
	oncmd 1
return